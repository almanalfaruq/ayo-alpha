<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.root.ayo_alpha.TwoFragment"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp">

        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/arc_progress"
            android:background="@null"
            android:layout_width="150dp"
            android:layout_height="150dp"
            custom:arc_progress="80"
            custom:arc_bottom_text="On time"
            custom:arc_text_size="40dp"
            custom:arc_bottom_text_size="20dp"
            custom:arc_text_color="@color/textColorPrimary"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>